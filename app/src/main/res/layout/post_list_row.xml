<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="725dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/post_row_user_imgv"
            android:layout_width="61dp"
            android:layout_height="62dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/post_row_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="TextView"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/post_row_user_imgv"
            app:layout_constraintTop_toTopOf="@+id/post_row_user_imgv" />

        <Button
            android:id="@+id/post_row_like_btn"
            android:layout_width="57dp"
            android:layout_height="64dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/like_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/post_row_comment_imgv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_row_content_tv"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/post_row_comment_imgv"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_row_content_tv"
            app:srcCompat="@drawable/comments_icon" />

        <ImageView
            android:id="@+id/post_row_post_imgv"
            android:layout_width="153dp"
            android:layout_height="147dp"
            android:layout_marginTop="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_row_name_tv"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/post_row_content_tv"
            android:layout_width="0dp"
            android:layout_height="136dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="14dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_row_post_imgv" />

        <TextView
            android:id="@+id/post_row_like_count_tv"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/post_row_like_btn"
            app:layout_constraintStart_toEndOf="@+id/post_row_like_btn" />

        <TextView
            android:id="@+id/post_comments_count_tv"
            android:layout_width="52dp"
            android:layout_height="53dp"
            android:layout_marginEnd="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/post_row_comment_imgv"
            app:layout_constraintEnd_toStartOf="@+id/post_row_comment_imgv" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="#5E1212"
            app:layout_constraintEnd_toEndOf="@+id/post_row_comment_imgv"
            app:layout_constraintStart_toStartOf="@+id/post_row_like_btn"
            app:layout_constraintTop_toBottomOf="@+id/post_row_like_btn" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/post_row_comments_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/post_row_comment_imgv"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/post_row_like_btn"
            app:layout_constraintTop_toBottomOf="@+id/view">

        </androidx.recyclerview.widget.RecyclerView>

        <EditText
            android:id="@+id/post_row_add_comment"
            android:layout_width="342dp"
            android:layout_height="31dp"
            android:layout_marginStart="69dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/add_comment_bg"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/post_row_comments_rv"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/post_row_comments_rv"
            app:layout_constraintTop_toBottomOf="@+id/post_row_comments_rv"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/post_row_add_comment"
            app:layout_constraintEnd_toEndOf="@+id/post_row_add_comment"
            app:layout_constraintTop_toTopOf="@+id/post_row_add_comment"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/ic_menu_send" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>